<VBox alignment="CENTER" minHeight="352.0" minWidth="591.0" prefHeight="400.0" prefWidth="626.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.diplom.styleidentifier.MainController">
   <TabPane minHeight="352.0" minWidth="591.0" prefHeight="329.0" prefWidth="620.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
     <tabs>
       <Tab text="Создание сети">
         <content>
           <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="349.0" prefWidth="615.0">
                  <children>
                     <Label layoutX="75.0" layoutY="41.0" text="Коэффициент обучения" />
                     <Label layoutX="305.0" layoutY="41.0" text="Количество нейронов на скрытом слое" />
                     <HBox alignment="CENTER" layoutX="-1.0" layoutY="266.0" prefHeight="40.0" prefWidth="626.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="-1.0" AnchorPane.rightAnchor="1.0">
                        <children>
                           <Button fx:id="createNeuronetButton" mnemonicParsing="false" onAction="#onCreateNeuronetButtonClick" text="Создать сеть">
                              <HBox.margin>
                                 <Insets right="20.0" />
                              </HBox.margin>
                           </Button>
                           <Button fx:id="loadNeuronetButton" mnemonicParsing="false" onAction="#onLoadNeuronetButtonClick" text="Загрузить сеть" />
                        </children>
                        <opaqueInsets>
                           <Insets right="30.0" top="30.0" />
                        </opaqueInsets>
                     </HBox>
                  </children></AnchorPane>
         </content>
       </Tab>
       <Tab text="Обучение сети">
         <content>
           <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="396.0" prefWidth="660.0">
                  <children>
                     <Label layoutX="14.0" layoutY="36.0" text="Количество эпох" />
                     <Button fx:id="test" layoutX="344.0" layoutY="41.0" mnemonicParsing="false" onAction="#testClick" text="Сохранить датасет" />
                     <Button fx:id="choseDatasetButton" layoutX="480.0" layoutY="41.0" mnemonicParsing="false" onAction="#onChoseDatasetButtonClick" text="Выбрать датасет" />
                     <HBox alignment="CENTER" prefHeight="40.0" prefWidth="626.0" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                        <opaqueInsets>
                           <Insets right="30.0" top="30.0" />
                        </opaqueInsets>
                        <children>
                           <Button fx:id="learnButton" mnemonicParsing="false" onAction="#onLearnButtonClick" text="Обучить" />
                           <Button fx:id="saveNetworkButton" mnemonicParsing="false" onAction="#onSaveNetworkButtonClick" text="Сохранить сеть" />
                        </children>
                     </HBox>
                     <Button layoutX="185.0" layoutY="161.0" mnemonicParsing="false" onAction="#onLoadSavedDatasetClick" text="Загрузить сериализованный датасетдатасет" />
                  </children></AnchorPane>
         </content>
       </Tab>
         <Tab text="Работа с сетью">
            <content>
               <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                  <children>
                     <HBox alignment="CENTER" prefHeight="40.0" prefWidth="626.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                        <opaqueInsets>
                           <Insets right="30.0" top="30.0" />
                        </opaqueInsets>
                        <children>
                           <Button fx:id="recognizeButton" mnemonicParsing="false" onAction="#onRecognizeButtonClick" text="Проанализировать запись" />
                        </children>
                     </HBox>
                  </children></AnchorPane>
            </content>
         </Tab>
     </tabs>
   </TabPane>
</VBox>
